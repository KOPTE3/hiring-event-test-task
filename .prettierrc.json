{
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": true,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["*.json", "*.css", "*.html"],
      "options": {
        "useTabs": false,
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
